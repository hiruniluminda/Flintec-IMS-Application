
@{
    ViewBag.Title = "Index";

}

@model IssueManagementSystem.Models.tbl_PPA_User

@{
    Layout = null;
}
<link href="@Url.Content("~/Content/3.3.0bootstrap.min.css")" rel="stylesheet">
<script src="~/Scripts/jquery-3.3.1.min.js"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")"></script>
<script src="~/Scripts/Manager/bootstrap.min.js"></script>
<link href="@Url.Content("~/Content/login.css")" rel="stylesheet" />
<script src="@Url.Content("~/Scripts/login.js")"></script>
<img src="~/Content/images/background.jpg" style="width:100%;height:100%;" />
<meta name="viewport" content="width=device-width" />

<div class="container">

    <div id="login-box" style="margin-top:10%;">
       
            <div class="logo">
                <img src="~/Content/images/flinteclogo.png" class="img img-responsive img-circle center-block" style="width:25%;height:12%" />

                <h1 class="logo-caption"><span class="tweak">L</span>ogin</h1>
            </div><!-- /.logo -->
            <div class="controls">

                @using (Html.BeginForm("Authorize", "Login", FormMethod.Post))
                {
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.TextBoxFor(model => model.EmployeeNumber, new { @class = "form-control", @placeholder = "EmployeeNumber", @id = "uid_txt" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @type = "password", @id = "pwd_txt" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-10">
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <lable>@Html.DisplayFor(model => model.LoginErrorMessage)</lable>
                            </div>
                        </div>

                        <button type="submit" id="submit_btn" class="btn btn-default btn-block btn-custom" value="Login">Login</button>    
                }
                </div><!-- /.controls -->
     </div><!-- /#login-box -->
</div><!-- /.container -->


<div id="particles-js"></div>


